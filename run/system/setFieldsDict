FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// This dictionary is used to initialize the level set function
// Negative values represent the material to be etched
// Positive values represent the surrounding medium

defaultFieldValues
(
    volScalarFieldValue phi -1.0  // Default: outside material
);

regions
(
    // Example: Define a box region as the material to be etched
    boundaryToCell
    {
        fieldValues
        (
            volScalarFieldValue phi 0.0  // Inside material
        );
    }
   
    
    // Add more regions as needed
);

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //