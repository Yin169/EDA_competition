FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    initial_struct.stl
    {
        type triSurfaceMesh;
        name initial_struct;
    }
};

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 10;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 3;
    allowFreeStandingZoneFaces false;  // Add this line

    features
    (
        {
            file "initial_struct.eMesh";
            level 3;
        }
    );

    refinementSurfaces
    {
        initial_struct
        {
            level (2 3);
            patchInfo
            {
                type wall;
            }
        }
    }

    refinementRegions
    {
        initial_struct
        {
            mode inside;
            levels ((1E15 4));  // Refinement level 4 within the geometry
        }
    }

    resolveFeatureAngle 30;
    locationInMesh (0 0 0);  // Make sure this point is INSIDE your geometry
}

snapControls
{
    nSmoothPatch 3;
    tolerance 2.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    relativeSizes true;
    layers
    {
        geometry
        {
            nSurfaceLayers 3;
        }
    }

    featureAngle 130;
    mergePatchFacesAngle 45;
    maxFaceThicknessRatio 0.5;
    slipFeatureAngle 30;
    expansionRatio 1.2;
    finalLayerThickness 0.3;
    minThickness 0.1;
    nGrow 0;
    featureAngle 60;
    nRelaxIter 3;
    nSmoothSurfaceNormals 1;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minFlatness 0.5;
    minVol 1e-13;
    minTetQuality 1e-15;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.02;
    minVolRatio 0.01;
    minTriangleTwist -1;
    errorReduction 0.75;
    nSmoothScale 4;
}

mergeTolerance 1e-6;