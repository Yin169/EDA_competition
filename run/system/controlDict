FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";   // 文件必须位于 system 目录
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     blockMesh;  // 当前运行的应用程序：
                            // blockMesh, snappyHexMesh, simpleFoam 等

startFrom       startTime;  // 初始时间设置选项：
                            // startTime | firstTime | latestTime
startTime       0;          // 初始时间（通常设为0）

stopAt          endTime;    // 停止条件：
                            // endTime | writeNow | noWriteNow | nextWrite
endTime         2;          // 结束时间（blockMesh/snappyHexMesh 设为1即可）

deltaT          0.0001;          // 时间步长（网格生成工具中可忽略）

writeControl    timeStep;   // 输出控制方式：
                            // timeStep | adjustableRunTime | runTime | clockTime
writeInterval   100;          // 输出间隔（与 writeControl 配合使用）

purgeWrite      5;          // 保留所有时间步结果（0=不删除，n=保留最近n个）

writeFormat     ascii;      // 输出格式：ascii | binary
writePrecision  6;          // 数据写入精度（小数位数）
writeCompression off;       // 压缩输出：on | off

timeFormat      general;    // 时间格式：general | scientific | fixed
timePrecision   6;          // 时间值精度

runTimeModifiable yes;      // 允许运行时修改参数（yes | no）


// ************************************************************************* //