FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      etchingProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Etching model selection: constant, concentrationDependent, directionDependent
etchRateModel        directionDependent;

// Base etching rate (units: length/time)
baseEtchRate         1.0;

// Reinitialization parameters
reInitInterval       5;      // Perform reinitialization every n time steps
reInitSteps          3;      // Number of iterations for reinitialization
reInitDt             0.1;    // Time step for reinitialization
etchRateModel      angularFlux;
baseEtchRate       1.0;
angularSigma       0.2;
nDirections        10;
fluxIntensity      1.0;
referenceDirection (0 0 1);

// Direction-dependent etching parameters (if using directionDependent model)
verticalFactor       2.0;    // Factor for vertical etching rate enhancement
horizontalFactor     1.0;    // Factor for horizontal etching rate

// Concentration-dependent parameters (if using concentrationDependent model)
concentrationRef     1.0;    // Reference concentration
concentrationExponent 0.5;   // Exponent for concentration dependence

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //